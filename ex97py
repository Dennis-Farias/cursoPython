def escreva(txt):
    largura_total = len(txt) + 6  # 3 espa√ßos de cada lado
    espacos_em_branco = largura_total - len(txt)
    espacos_esquerda = espacos_em_branco // 2
    espacos_direita = espacos_em_branco - espacos_esquerda

    linha = '-' * (largura_total)
    texto_centralizado = ' ' * espacos_esquerda + txt + ' ' * espacos_direita

    print(linha)
    print(texto_centralizado)
    print(linha)

escreva('Gustavo Guanabara')
escreva('Curso de Python no YouTube')
escreva('CeV')